<Window x:Class="RoomManagement.EditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoomManagement"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Edit Category" Height="110" Width="360" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <hc:TextBox Name="NameTextBox" Width="200" Height="30" Margin="10" VerticalContentAlignment="Center"
                ShowClearButton="True" TextType="Common" hc:InfoElement.Necessary="True"/>
            <Button Name="UpdateBtn" Click="UpdateBtn_Click" Margin="10" IsDefault="True" HorizontalAlignment="Center" Width="80">Update</Button>
        </StackPanel>
    </Grid>
</Window>